{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true
  },
  "eslint.validate": [
    "javascript",
    "typescript",
    "vue"
  ],
  "stylelint.validate": [
    "css",
    "scss",
    "vue",
    "html",
    "postcss"
  ]
}