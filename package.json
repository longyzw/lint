{
  "name": "ly-lint",
  "version": "0.0.9",
  "description": "统一lint风格",
  "main": "index.js",
  "scripts": {
    "lint:eslint": "vue-tsc --noEmit && eslint . --ext .vue,.js,.jsx,.cjs,.ts,.tsx --fix --ignore-path .eslintignore",
    "lint:css": "stylelint **/*.{vue,css,sass,scss} --fix"
  },
  "bin": {
    "ly-lint": "./bin/index.js"
  },
  "keywords": [
    "lint",
    "eslint",
    "prettier",
    "stylelint",
    "husky",
    "commitlint",
    "vue3",
    "vite"
  ],
  "author": "Kimi.Y",
  "license": "ISC",
  "dependencies": {
    "commander": "^10.0.1",
    "inquirer": "^8.2.5"
  },
  "devDependencies": {
    "@types/node": "^20.1.7",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "postcss": "^8.4.23",
    "postcss-html": "^1.5.0",
    "typescript": "^5.0.4",
    "vue-tsc": "^1.6.5"
  },
  "lint-staged": {
    "*.{js,vue,ts}": "npm run lint:eslint",
    "*.{vue,css,scss,sass}": "npm run lint:css"
  }
}